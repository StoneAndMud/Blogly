{% extends 'base.j2' %}
{% block title %}{{tag.name}}{% endblock %}
{% block content %}

<h1>{{tag.name}}<h1>
<ul>
    {% for p in tag.posts %}
    <li>
        <a href="/posts/{{p.id}}">{{p.title}}</a>
    </li>
    {% endfor %}
</ul>
<form>
    <button formaction="/tags/{{tag.id}}/edit" formmethod="GET">Edit</button>
    <button formaction="/tags/{{tag.id}}/delete" formmethod="POST">Delete</button>
</form>
{% endblock %}