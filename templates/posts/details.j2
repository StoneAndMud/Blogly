{% extends 'base.j2' %}
{% block title %}{{post.title}}{% endblock %}
{% block content %}

<h1>{{post.title}}<h1>
<p>{{post.content}}</p>
<p>By {{post.user.first_name}} {{post.user.last_name}} on {{post.nice_datetime}}</p>
<form>
    <button formmethod="GET" formaction="/users/{{post.user_id}}">Cancel</button>
    <button formaction="/posts/{{post.id}}/edit" formmethod="GET">Edit</button>
    <button formaction="/posts/{{ post.id }}/delete" formmethod="POST">Delete</button>
</form>
{% endblock %}