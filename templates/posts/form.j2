{% extends 'base.j2' %}
{% block title %}PostForm{% endblock %}
{% block content %}
    <h2>Add Post for {{user.first_name}} {{user.last_name}}</h2>
    <form method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="Enter a title" id="title" />
      <label for="content">Content</label>
      <input type="text" name="content" placeholder="Enter your content" id="content"/>
      
      {% for t in tags %}
        <div>
          <input class="form-check-input"
             type="checkbox"
             value="{{ t.id }}"
             id="tag_{{ t.id }}"
             name="tags">
          <label class="form-check-label" for="tag_{{ t.id }}">{{ t.name }}</label>
        </div>
      {% endfor %}

      <a href="/users/{{user.id}}">Cancel</a>
      <button type="submit">Add</button>
    </form>
{% endblock %}