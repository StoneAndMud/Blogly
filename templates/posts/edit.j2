{% extends 'base.j2' %}
{% block title %}Edit Post Form{% endblock %}
{% block content %}
    <h2>Edit Post for {{post.user.first_name}} {{post.user.last_name}}</h2>
    <form method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="Enter a title" id="title" />
      <label for="content">Content</label>
      <input type="text" name="content" placeholder="Enter your content" id="content"/>
      <a href="/users">Cancel</a>
      <button type="submit">Add</button>
    </form>
{% endblock %}